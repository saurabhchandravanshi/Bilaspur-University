<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context=".SearchResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_result_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            android:inputType="textCapCharacters"
            android:outlineSpotShadowColor="@color/colorAccent"
            android:fontFamily="@font/sen_bold"
            android:hint="ENTER YOUR NAME" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/search_result_submit_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/filled_border_accent"
        android:lineSpacingExtra="6dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:fontFamily="@font/sen_bold"
        android:padding="6dp"
        android:text="SEARCH RESULT BY NAME"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:textAlignment="center"
        android:fontFamily="@font/sen_bold"
        android:textColor="@android:color/black"
        android:text="OR SEARCH BY ROLL NUMBER"
        android:gravity="center_horizontal" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_result_roll_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textAllCaps="true"
            android:inputType="number"
            android:outlineSpotShadowColor="@color/colorAccent"
            android:fontFamily="@font/sen_bold"
            android:hint="ENTER YOUR ROLL NUMBER" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/search_result_submit_roll_no"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/filled_border_accent"
        android:lineSpacingExtra="6dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:fontFamily="@font/sen_bold"
        android:padding="6dp"
        android:text="SEARCH RESULT BY ROLL NUMBER"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

        <com.google.android.gms.ads.AdView
            android:id="@+id/search_result_ad1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="30dp"
            ads:adUnitId="@string/search_result_ad_1"/>
        <com.google.android.gms.ads.AdView
            android:id="@+id/search_result_ad2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="30dp"
            ads:adUnitId="@string/search_result_ad_2"/>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>