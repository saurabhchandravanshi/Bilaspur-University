<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewResultActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_result_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/view_result_loader_frame">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/view_result_loader"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/loading_animation"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view_result_loader"
                android:fontFamily="@font/sen_bold"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:text="Fetching requested result from Bastar University"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>